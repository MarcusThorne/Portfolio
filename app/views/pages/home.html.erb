  </div>
</div>

<%# Projects %>
<div class="mt-20 w-full flex flex-col justify-center lg:px-20" id="portfolio">
  <div class="px-5 md:px-20 mb-10">
    <h1 class="text-4xl text-gray-600">Projects</h1>

    <div class="w-full flex justify-between">
      <div class="flex flex-wrap space-x-2 mt-10 space-y-2">
        <p class="bg-gray-800 text-white rounded px-4 py-1 w-max hover:bg-gray-600 transition duration-300">React</p>
        <p class="bg-gray-800 text-white rounded px-4 py-1 w-max hover:bg-gray-600 transition duration-300">Rails</p>
        <p class="bg-gray-800 text-white rounded px-4 py-1 w-max hover:bg-gray-600 transition duration-300">Tailwind</p>
