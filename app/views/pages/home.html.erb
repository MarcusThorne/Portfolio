      </div>

      <div class="flex text-gray-600 hidden md:flex">
        <p class="prev cursor-pointer mt-auto rounded-l border border-gray-300 px-10 py-2 uppercase w-max hover:shadow-md transform transition hover:scale-105 duration-300 mr-2 hover:bg-blue-400 hover:text-white" style="height: max-content;"><i class="fas fa-chevron-left"></i></p>
        <p class="next cursor-pointer mt-auto rounded-r border border-gray-300 px-10 py-2 uppercase w-max hover:shadow-md transform transition hover:scale-105 duration-300 hover:bg-blue-400 hover:text-white" style="height: max-content;"><i class="fas fa-chevron-right"></i></p>
      </div>
    </div>
  </div>

  <%# Carousel %>
  <div id="carousel" class="w-full overflow-hidden mt-0">
    <% @websites.each do |site| %>
      <div class="rounded my-14 border-2 border-gray-100 mx-1 md:mx-3 p-2 transform duration-300 hover:scale-105 hover:shadow-xl">
        <%= image_tag(site[:image], class: "rounded-t h-52 object-cover") %>
        <h1 class="mt-5 text-xl mx-3 text-blue-500"><%= site[:title] %></h1>
        <p class="mb-5 mt-2 mx-3 text-gray-600"><%= site[:description] %></p>
        <div class="flex justify-center border border-gray-200 rounded w-full">
          <% if site[:github] %>
            <a href=<%= site[:githubLink] %> class="w-1/2 border-r border-gray-200 text-center py-2 hover:bg-blue-300 hover:text-white transform duration-300"><i class="fab fa-github"></i> GitHub</a>
          <% end %>
          <a href=<%= site[:website] %> class="<%= site[:github] ? "w-1/2" : "w-full" %> text-center py-2 hover:bg-blue-300 hover:text-white transform duration-300"><i class="far fa-eye"></i> Live Site</a>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%# Experience and Education %>
<div id="experience" class="bg-gray-100 pt-10 pb-20 mt-20 md:mt-32">
  <% 2.times do %>
    <h1 class="text-center text-4xl my-16 text-blue-400"><%= @title %></h1>

    <% @work.each do |w| %>
      <% if w[:education] == @activeEducation %>
        <div class="flex pl-8 pr-5 md:px-10 lg:px-20 my-5" style="height: max-content">
          <p class="hidden md:flex md:mr-20 lg:mr-40 w-20 whitespace-nowrap"><%= w[:date] %></p>

          <div class="border-l-2 border-blue-400 relative w-full">
            <p class="absolute -top-8 -left-5 border border-blue-400 rounded-full bg-white w-10 h-10 flex justify-center items-center"><i class="<%= @title == "Experience" ? "fas fa-briefcase" : "fas fa-user-graduate" %>"></i></p>

            <div class="bg-gray-200 opacity-80 px-5 sm:px-10 py-5 rounded ml-10 md:ml-20 lg:ml-40">
              <h1 class="text-xl"><%= w[:job] %></h1>
              <h1 class="text-lg mb-5 text-blue-400"><%= w[:title] %></h1>
              <p class="text-xs sm:text-base"><%= w[:description] %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>

    <% @activeEducation = true %>
    <% @title = "Education" %>
  <% end %>
</div>

